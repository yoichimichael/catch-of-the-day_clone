/*
  Possible Animations:
  enter
  exit
  appear Must set transitionAppear={true} on animation component
*/


// all these classes will be removed after animation is finished
.order-enter
  background red

  transform translateX(-120%)
  transition 0.5s
  max-height 0
  padding 0 !important
  &.order-enter-active
    background yellow
    max-height 60px
    transform translateX(0)
    padding 2rem 0 !important

.order-exit
  background palegoldenrod
  transform  translateX(0)
  transition 3s
  &.order-exit-active
    transform translateX(120%)
    background thistle
    


